@using iConnect.Data.Model;

<div class="navbar navbar-default navbar-fixed-top" role="navigation" id="header">
    <div class="container">
      
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href='@Url.Action("Chat", "Server")'>iConnect</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    @if(Roles.IsUserInRole(UserType.Admin.ToString()))
                    {                        
                        <li>@Ajax.ActionLink("Chat", "Chat", "Server", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "childContainer" })</li>                        
                        <li>@Ajax.ActionLink("Users", "GetUserList", "Server", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "childContainer" })</li>
                        <li><a href="#">Settings</a></li>
                    }
                </ul>
                @if (Request.IsAuthenticated)
                { 
                    <ul class="nav navbar-nav navbar-right">                        
                        <li>
                            <a href='@Url.Action("Logout", "Server")' onclick="javascript: chatServer.Logout('@User.Identity.Name'); return true;">
                                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                                Logout
                            </a>
                        </li>
                    </ul>
                }                
            </div>
   
    </div>
</div>

