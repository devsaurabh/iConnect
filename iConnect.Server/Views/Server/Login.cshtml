@model iConnect.Server.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<style type="text/css">
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title" style="color:white">Sign in to continue to <span class="brand">iConnect</span></h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                     alt="">

                @using(Html.BeginForm("Login","Server",FormMethod.Post,new {@class = "form-signin"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)                    
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Email" })
                    //@Html.ValidationMessageFor(m => m.UserName)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    //@Html.ValidationMessageFor(m => m.Password)
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>                                        
                    <label class="checkbox pull-left">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        Remember me
                    </label>
                    <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                }
            </div>           
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}